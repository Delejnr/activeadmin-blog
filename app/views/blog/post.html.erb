<%= render :partial => "header" %>

<div>
  <!-- TITLE -->
  <h2><%= @post.title %></h2>

  <!-- DATE -->
  <span>Date: <%= @post.date %></span>

  <!-- CATEGORIES -->
  <% if @post.categories.size > 0 %>
    <span>Posted in:</span>
    <ul>
      <% @post.categories.each do |c| %>
      <li><a href='<% blog_path() + "?category=#{c.name}"%>' title="<%= c.name %>"><%= c.name %></a></li>
      <% end %>
    </ul>
  <% end %>

  <!-- CONTENT -->
  <div><%= @post.content.html_safe %></div>
</div>
